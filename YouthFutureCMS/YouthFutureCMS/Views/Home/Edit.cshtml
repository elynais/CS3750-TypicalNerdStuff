<!--This is the Edit View for the Home page-->
@{
    ViewBag.Title = "Edit";
}

@model YouthFutureCMS.Models.HomeModel

<script language="javascript">
    var duck = new Audio('duck.mp3');
    function quack(){
        duck.play();
    }
</script>

<div class="buttons">
    <ul>
        <li><input class="btn pull-right" value="Save" onclick="quack();"></li>
        <li><input class="btn pull-right" value="Cancel"></li>
    </ul>
</div>

<div id="main-body">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html"></a><img src="./resources/yf_logo.svg" alt="Youth Futures Logo" />
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="index.html" class="current">Home</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Programs</a>
                        <ul class="dropdown-menu">
                            <li><a href="secondary.cshtml#outreachBanner">Street Outreach</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Get Involved</a>
                        <ul class="dropdown-menu">
                            <li><a href="secondary.cshtml#donateMain">Donate</a></li>
                            <li><a href="#">Events</a></li>
                            <li><a href="secondary.cshtml#donorsMain">Donor Recognition</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">About Us</a>
                        <ul class="dropdown-menu">
                            <li><a href="secondary.cshtml#historyBanner">History</a></li>
                            <li><a href="secondary.cshtml#staffMain">Staff</a></li>
                            <li><a href="secondary.cshtml#directorsMain">Board</a></li>
                            <li><a href="secondary.cshtml#mediaMain">Media</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Contact</a>
                        <ul class="dropdown-menu">
                            <li><a href="secondary.cshtml#contactMain">Contact Info</a></li>
                        </ul>
                    </li>
                    <li class="donate" style="background-color: #1c5788;"><a href="secondary.cshtml#donateMain">Donate</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <section class="container-fluid main-header indexLeftMargin">
        <div class="row">
            <div class="header-box" contenteditable="true">
                <div class="row">
                    <p class="header-text-greeting "> @Model.getContent("Header Text") </p>
                </div>
                <div class="row sub-text-box">
                    <p class="sub-text">@Html.Raw(Model.getContent("Header Fact"))</p>
                </div>
            </div>
        </div>
    </section>

    <section id="header" class="container-fluid indexLeftMargin">
        <div class="row">
            <div class="col-xs-offset-1 col-xs-11" contenteditable="true">
                <p class="green-header">
                    <span class="mont-semibold-dark-36 have-questions-heading">@Model.getContent("Header Contacting")</span>
                    <span class="quicksand-dark-36-main have-questions-phone"> @Model.getContent("Header Contact Number")</span>
                </p>
            </div>
        </div>
    </section>

    <section class="container-fluid indexLeftMarginServices">
        <div class="row">
            <div class="col-xs-12" contenteditable="true">
                <h4 class="services-heading">@Model.getContent("Service Title")</h4>
                <p class="mont-light-light-22 about-services">
                    @Model.getContent("Service desc")
                </p>
            </div>
        </div>
        <div class="row">
            <div class="purpose-boxes">
                @foreach (var col in Model.getColumns(1))
            {
                    <article class="col-sm-4">
                        <section class="panel-img-container">
                            <img src="@Model.getImagePath(col.image_Id)" alt="House" class="img-responsive panel-img img-center" />
                        </section>
                        <section>
                            <p class="quicksand-light-32 panel-heading">@col.columnHeader</p>
                        </section>
                        <section class="minHeightServices">
                            <p class="mont-light-light-18 panel-summary">
                                @col.columnInfo
                            </p>
                        </section>
                        <section class="panel-footer Learn-more-">
                            <p class="quicksand-light-24-green">
                                <a href="@col.columnLink">@col.columnLinkDesc</a>
                            </p>
                        </section>
                    </article>
                }
            </div>
        </div>
    </section>

    <article class="container-fluid indexLeftMargin">
        <section class="purpose purpose-padding indexLeftMargin" contenteditable="true">
            <div class="row purpose-title">
                @Html.Raw(Model.getContent("Our Purpose"))
            </div>
            <div class="row purpose-detail">
                <div class="col-xs-12 no-padding">
                    <p class="montlight-dark-32">
                        @Model.getContent("Our purpose desc")
                    </p>
                </div>
            </div>
            <div class="purpose-stats">
                <div class="col-xs-12">
                    <p>@Html.Raw(Model.getContent("Our purpose fact"))</p>
                </div>
            </div>
        </section>

        <div class="clear"></div>

        <section class="sponsor-bar">
            <div class="col-xs-12 col-lg-3" contenteditable="true">
                <p class="partner-text">@Model.getContent("Our sponsor")</p>
            </div>
            @foreach (var sp in Model.content.Where(c => c.contentName == "Sponsors"))
            {
                <div class="col-xs-12 col-lg-3 ">
                    <div class="partner-logo">
                        <img src="@Model.getImagePath(sp.image_Id)" alt="Picture" class="@sp.contentInfo" />
                    </div>
                </div>
            }
        </section>

        <article class="container-fluid indexLeftMargin30">
            <section class="row purpose-user">
                <div class="purpose-boxes">
                    @foreach (var col in Model.getColumns(2))
                    {
                        <article class="col-sm-4 purpose-border">
                            <section class="panel-img-container">
                                <img src="@Model.getImagePath(col.image_Id)" alt="Picture" class="img-responsive panel-img img-center" />
                            </section>
                            <section>
                                <p class="panel-heading">@col.columnHeader</p>
                            </section>
                            <section class="minHeight">
                                <p class="mont-light-light-22 panel-summary">@col.columnInfo</p>
                            </section>
                            <section class="panel-footer">
                                <p class="quicksand-light-24-green">
                                    <a href="@col.columnLink">@col.columnLinkDesc</a>
                                </p>
                            </section>
                        </article>
                    }
                </div>
            </section>
        </article>
    </article>

</div>
